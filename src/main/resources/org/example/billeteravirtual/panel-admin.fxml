<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #F1F5F9;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.billeteravirtual.ui.PanelAdminController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-padding: 16 32; -fx-border-color: transparent transparent #E2E8F0 transparent;">

            <VBox spacing="2">
                <Label text="Administración" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #0F172A;"/>
                <Label text="Control total del sistema" style="-fx-text-fill: #64748B; -fx-font-size: 13px;"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS" />

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Guardar Datos" onAction="#onBotonGuardarArchivo" styleClass="button-primary"/>
                <Button text="Cargar Datos" onAction="#onBotonCargarArchivo" styleClass="button-secondary"/>
                <Separator orientation="VERTICAL" />
                <Button text="Salir" onAction="#onBotonSalirClick" styleClass="button-danger"/>
            </HBox>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 30;">

            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);" VBox.vgrow="ALWAYS" spacing="10">
                <HBox alignment="CENTER_LEFT">
                    <Label text="Usuarios" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1E293B;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Actualizar" onAction="#cargarUsuarios" styleClass="button-secondary" style="-fx-font-size: 12px;"/>
                </HBox>

                <TableView fx:id="tablaUsuarios" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCedula" text="Cédula" prefWidth="130"/>
                        <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180"/>
                        <TableColumn fx:id="colAlias" text="Alias" prefWidth="130"/>
                        <TableColumn fx:id="colEmail" text="Email" prefWidth="220"/>
                        <TableColumn fx:id="colSaldo" text="Saldo" prefWidth="120"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);" VBox.vgrow="ALWAYS" spacing="10">
                <HBox alignment="CENTER_LEFT">
                    <Label text="Transacciones" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1E293B;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Actualizar" onAction="#cargarTransacciones" styleClass="button-secondary" style="-fx-font-size: 12px;"/>
                </HBox>

                <TableView fx:id="tablaTransacciones" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colID" text="ID" prefWidth="120"/>
                        <TableColumn fx:id="colFecha" text="Fecha" prefWidth="140"/>
                        <TableColumn fx:id="colTipo" text="Tipo" prefWidth="140"/>
                        <TableColumn fx:id="colMonto" text="Monto" prefWidth="120"/>
                        <TableColumn fx:id="colUsuario" text="Usuario" prefWidth="150"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

        </VBox>
    </center>
</BorderPane>