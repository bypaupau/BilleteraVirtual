<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.billeteravirtual.ui.PanelUsuarioController"
            fitToWidth="true" style="-fx-background-color: #F1F5F9; -fx-background: #F1F5F9; -fx-border-width: 0;">

    <VBox alignment="TOP_CENTER" spacing="0" style="-fx-padding: 30 20;">

        <VBox spacing="24" maxWidth="600" alignment="TOP_CENTER">

            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <VBox spacing="2">
                    <Label fx:id="lblNombre" text="Hola, Usuario" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0F172A;"/>
                    <Label text="Bienvenido" style="-fx-text-fill: #64748B; -fx-font-size: 14px;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Cerrar Sesión" onAction="#onBotonSalir" styleClass="button-danger" />
            </HBox>

            <VBox styleClass="balance-card" spacing="5">
                <Label text="Saldo Total" styleClass="balance-label-title"/>
                <Label fx:id="lblSaldo" text="\$ 0.00" styleClass="balance-label-amount"/>
            </VBox>

            <VBox spacing="12">
                <Label text="Operaciones" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #334155;"/>

                <GridPane hgap="25" vgap="25">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0"/>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0"/>
                    </columnConstraints>

                    <VBox styleClass="action-card-clickable" spacing="15" onMouseClicked="#abrirVentanaDeposito" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <StackPane style="-fx-background-color: #DCFCE7; -fx-background-radius: 14px; -fx-padding: 12px;">
                                <Label text="↓" textFill="#16A34A" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                            </StackPane>
                            <VBox spacing="4" alignment="CENTER_LEFT">
                                <Label text="Depositar" styleClass="action-card-title"/>
                                <Label text="Ingresa dinero a tu cuenta" styleClass="action-card-desc" wrapText="true"/>
                            </VBox>
                        </HBox>
                    </VBox>

                    <VBox styleClass="action-card-clickable" spacing="15" onMouseClicked="#abrirVentanaRetiro" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <StackPane style="-fx-background-color: #FEE2E2; -fx-background-radius: 14px; -fx-padding: 12px;">
                                <Label text="↑" textFill="#DC2626" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                            </StackPane>
                            <VBox spacing="4" alignment="CENTER_LEFT">
                                <Label text="Retirar" styleClass="action-card-title"/>
                                <Label text="Saca dinero en efectivo" styleClass="action-card-desc" wrapText="true"/>
                            </VBox>
                        </HBox>
                    </VBox>

                    <VBox styleClass="action-card-clickable" spacing="15" onMouseClicked="#abrirVentanaTransferencia" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <StackPane style="-fx-background-color: #E0E7FF; -fx-background-radius: 14px; -fx-padding: 12px;">
                                <Label text="→" textFill="#4F46E5" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                            </StackPane>
                            <VBox spacing="4" alignment="CENTER_LEFT">
                                <Label text="Transferir" styleClass="action-card-title"/>
                                <Label text="Envía dinero a otros usuarios" styleClass="action-card-desc" wrapText="true"/>
                            </VBox>
                        </HBox>
                    </VBox>

                    <VBox styleClass="action-card-clickable" spacing="15" onMouseClicked="#abrirVentanaHistorial" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <StackPane style="-fx-background-color: #F3E8FF; -fx-background-radius: 14px; -fx-padding: 12px;">
                                <Label text="☰" textFill="#9333EA" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                            </StackPane>
                            <VBox spacing="4" alignment="CENTER_LEFT">
                                <Label text="Historial" styleClass="action-card-title"/>
                                <Label text="Revisa tus movimientos" styleClass="action-card-desc" wrapText="true"/>
                            </VBox>
                        </HBox>
                    </VBox>
                </GridPane>
            </VBox>

            <HBox spacing="12" alignment="CENTER">
                <Button text="Ver Historial" onAction="#onBotonHistorial"
                        styleClass="button-secondary" prefWidth="200"/>
                <Button text="Mis Datos" onAction="#onBotonInfo"
                        styleClass="button-secondary" prefWidth="200"/>
            </HBox>

        </VBox>
    </VBox>
</ScrollPane>